{
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"env": {
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": ["plugin:@typescript-eslint/recommended"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"Promise": true
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"tsconfig": "./tsconfig.json"
	},
	"rules": {
		"array-callback-return": "error",
		"@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "ignore.*", "argsIgnorePattern": "^_" }],
		"curly": "error",
		"no-alert": "error",
		"no-caller": "error",
		"@typescript-eslint/camelcase": "warn",
		"@typescript-eslint/indent": ["warn", "tab"],
		"semi": "error"
	}
}
